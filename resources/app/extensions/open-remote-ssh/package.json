{
	"name": "codebuddy-remote-ssh",
	"displayName": "CodeBuddy Remote - SSH",
	"description": "Use any remote machine with a SSH server as your development environment.",
	"version": "0.0.49",
	"publisher": "CodeBuddy",
	"repository": {
		"type": "git",
		"url": "https://www.codebuddy.ai/"
	},
	"bugs": {
		"url": "https://www.codebuddy.ai/"
	},
	"icon": "resources/icon.png",
	"engines": {
		"vscode": "^1.70.2"
	},
	"extensionKind": [
		"ui"
	],
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true,
			"description": "This extension can be used in untrusted workspaces as it only manages SSH connections and does not execute workspace code."
		}
	},
	"enabledApiProposals": [
		"resolvers",
		"contribViewsRemote"
	],
	"keywords": [
		"remote development",
		"remote",
		"ssh"
	],
	"api": "none",
	"activationEvents": [
		"",
		"onCommand:openremotessh.openEmptyWindow",
		"onCommand:openremotessh.openEmptyWindowInCurrentWindow",
		"onCommand:openremotessh.openConfigFile",
		"onCommand:openremotessh.showLog",
		"onResolveRemoteAuthority:codebuddy-remote-ssh",
		"onView:codeBuddySshHosts"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "CodeBuddy Remote - SSH",
			"properties": {
				"codebuddy.remote.SSH.configFile": {
					"type": "string",
					"description": "The absolute file path to a custom SSH config file.",
					"default": "",
					"scope": "application"
				},
				"codebuddy.remote.SSH.connectTimeout": {
					"type": "number",
					"description": "Specifies the timeout in seconds used for the SSH command that connects to the remote.",
					"default": 60,
					"scope": "application",
					"minimum": 1
				},
				"codebuddy.remote.SSH.defaultExtensions": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "List of extensions that should be installed automatically on all SSH hosts.",
					"scope": "application"
				},
				"codebuddy.remote.SSH.enableDynamicForwarding": {
					"type": "boolean",
					"description": "Whether to use SSH dynamic forwarding to allow setting up new port tunnels over an existing SSH connection.",
					"scope": "application",
					"default": true
				},
				"codebuddy.remote.SSH.enableAgentForwarding": {
					"type": "boolean",
					"markdownDescription": "Enable fixing the remote environment so that the SSH config option `ForwardAgent` will take effect as expected from VS Code's remote extension host.",
					"scope": "application",
					"default": true
				},
				"codebuddy.remote.SSH.serverDownloadUrlTemplate": {
					"type": "string",
					"description": "The URL from where the vscode server will be downloaded. You can use the following variables and they will be replaced dynamically:\n- ${quality}: vscode server quality, e.g. stable or insiders\n- ${version}: vscode server version, e.g. 1.69.0\n- ${commit}: vscode server release commit\n- ${arch}: vscode server arch, e.g. x64, armhf, arm64\n- ${release}: release number, vscodium only https://github.com/VSCodium/vscodium/pull/1192",
					"scope": "application"
				},
				"codebuddy.remote.SSH.startupCommand": {
					"type": "string",
					"description": "The command to run when the server init scripts, default is 'bash -c -x'",
					"scope": "application"
				},
				"codebuddy.remote.SSH.remotePlatform": {
					"type": "object",
					"description": "A map of the remote hostname to the platform for that remote. Valid values: linux, macos, windows.",
					"scope": "application",
					"default": {},
					"additionalProperties": {
						"type": "string",
						"enum": [
							"linux",
							"macos",
							"windows"
						]
					}
				},
				"codebuddy.remote.SSH.remoteServerListenOnSocket": {
					"type": "boolean",
					"description": "When true, the remote vscode server will listen on a socket path instead of opening a port. Only valid for Linux and macOS remotes. Requires `AllowStreamLocalForwarding` to be enabled for the SSH server.",
					"default": false
				},
				"codebuddy.remote.SSH.experimental.serverBinaryName": {
					"type": "string",
					"description": "**Experimental:** The name of the server binary, use this **only if** you are using a client without a corresponding server release",
					"scope": "application",
					"default": ""
				}
			}
		},
		"views": {
			"remote": [
				{
					"id": "codeBuddySshHosts",
					"name": "SSH Targets",
					"group": "targets@1",
					"remoteName": "ssh-remote"
				}
			]
		},
		"commands": [
			{
				"command": "codebuddy.openremotessh.openEmptyWindow",
				"title": "Connect to Host...",
				"category": "Remote-SSH"
			},
			{
				"command": "codebuddy.openremotessh.openEmptyWindowInCurrentWindow",
				"title": "Connect Current Window to Host...",
				"category": "Remote-SSH"
			},
			{
				"command": "codebuddy.openremotessh.openConfigFile",
				"title": "Open SSH Configuration File...",
				"category": "Remote-SSH"
			},
			{
				"command": "codebuddy.openremotessh.showLog",
				"title": "Show Log",
				"category": "Remote-SSH"
			},
			{
				"command": "codebuddy.openremotessh.explorer.emptyWindowInNewWindow",
				"title": "Connect to Host in New Window",
				"icon": "$(empty-window)"
			},
			{
				"command": "codebuddy.openremotessh.explorer.emptyWindowInCurrentWindow",
				"title": "Connect to Host in Current Window"
			},
			{
				"command": "codebuddy.openremotessh.explorer.reopenFolderInCurrentWindow",
				"title": "Open on SSH Host in Current Window"
			},
			{
				"command": "codebuddy.openremotessh.explorer.reopenFolderInNewWindow",
				"title": "Open on SSH Host in New Window",
				"icon": "$(folder-opened)"
			},
			{
				"command": "codebuddy.openremotessh.explorer.deleteFolderHistoryItem",
				"title": "Remove From Recent List",
				"icon": "$(x)"
			},
			{
				"command": "codebuddy.openremotessh.explorer.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "codebuddy.openremotessh.explorer.configure",
				"title": "Configure",
				"icon": "$(gear)"
			},
			{
				"command": "codebuddy.openremotessh.explorer.add",
				"title": "Add New",
				"icon": "$(plus)"
			}
		],
		"menus": {
			"statusBar/remoteIndicator": [
				{
					"command": "codebuddy.openremotessh.openEmptyWindow",
					"when": "emoteConnectionState == connected",
					"group": "remote_20_ssh_1general@1"
				},
				{
					"command": "codebuddy.openremotessh.openEmptyWindowInCurrentWindow",
					"when": "remoteConnectionState == connected",
					"group": "remote_20_ssh_1general@2"
				},
				{
					"command": "codebuddy.openremotessh.openConfigFile",
					"when": "remoteConnectionState == connected",
					"group": "remote_20_ssh_1general@3"
				},
				{
					"command": "codebuddy.openremotessh.showLog",
					"when": "remoteConnectionState == connected",
					"group": "remote_20_ssh_1general@4"
				},
				{
					"command": "codebuddy.openremotessh.openEmptyWindow",
					"when": "remoteConnectionState == disconnected",
					"group": "remote_20_ssh_3local@1"
				},
				{
					"command": "codebuddy.openremotessh.openEmptyWindowInCurrentWindow",
					"when": "remoteConnectionState == disconnected",
					"group": "remote_20_ssh_3local@2"
				},
				{
					"command": "codebuddy.openremotessh.openConfigFile",
					"when": "remoteConnectionState == disconnected",
					"group": "remote_20_ssh_3local@3"
				},
				{
					"command": "codebuddy.openremotessh.openEmptyWindow",
					"when": "!remoteName && !virtualWorkspace",
					"group": "remote_20_ssh_3local@5"
				},
				{
					"command": "codebuddy.openremotessh.openEmptyWindowInCurrentWindow",
					"when": "!remoteName && !virtualWorkspace",
					"group": "remote_20_ssh_3local@6"
				},
				{
					"command": "codebuddy.openremotessh.openConfigFile",
					"when": "!remoteName && !virtualWorkspace",
					"group": "remote_20_ssh_3local@7"
				}
			],
			"commandPalette": [
				{
					"command": "codebuddy.openremotessh.explorer.refresh",
					"when": "false"
				},
				{
					"command": "codebuddy.openremotessh.explorer.configure",
					"when": "false"
				},
				{
					"command": "codebuddy.openremotessh.explorer.add",
					"when": "false"
				},
				{
					"command": "codebuddy.openremotessh.explorer.emptyWindowInNewWindow",
					"when": "false"
				},
				{
					"command": "codebuddy.openremotessh.explorer.emptyWindowInCurrentWindow",
					"when": "false"
				},
				{
					"command": "codebuddy.openremotessh.explorer.reopenFolderInCurrentWindow",
					"when": "false"
				},
				{
					"command": "codebuddy.openremotessh.explorer.reopenFolderInNewWindow",
					"when": "false"
				},
				{
					"command": "codebuddy.openremotessh.explorer.deleteFolderHistoryItem",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "codebuddy.openremotessh.explorer.add",
					"when": "view == codeBuddySshHosts",
					"group": "navigation"
				},
				{
					"command": "codebuddy.openremotessh.explorer.configure",
					"when": "view == codeBuddySshHosts",
					"group": "navigation"
				},
				{
					"command": "codebuddy.openremotessh.explorer.refresh",
					"when": "view == codeBuddySshHosts",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "codebuddy.openremotessh.explorer.emptyWindowInNewWindow",
					"when": "viewItem =~ /^codebuddy.openremotessh.explorer.host$/",
					"group": "inline@1"
				},
				{
					"command": "codebuddy.openremotessh.explorer.emptyWindowInNewWindow",
					"when": "viewItem =~ /^codebuddy.openremotessh.explorer.host$/",
					"group": "navigation@2"
				},
				{
					"command": "codebuddy.openremotessh.explorer.emptyWindowInCurrentWindow",
					"when": "viewItem =~ /^codebuddy.openremotessh.explorer.host$/",
					"group": "navigation@1"
				},
				{
					"command": "codebuddy.openremotessh.explorer.reopenFolderInNewWindow",
					"when": "viewItem == codebuddy.openremotessh.explorer.folder",
					"group": "inline@1"
				},
				{
					"command": "codebuddy.openremotessh.explorer.reopenFolderInNewWindow",
					"when": "viewItem == codebuddy.openremotessh.explorer.folder",
					"group": "navigation@2"
				},
				{
					"command": "codebuddy.openremotessh.explorer.reopenFolderInCurrentWindow",
					"when": "viewItem == codebuddy.openremotessh.explorer.folder",
					"group": "navigation@1"
				},
				{
					"command": "codebuddy.openremotessh.explorer.deleteFolderHistoryItem",
					"when": "viewItem =~ /^codebuddy.openremotessh.explorer.folder/",
					"group": "navigation@3"
				},
				{
					"command": "codebuddy.openremotessh.explorer.deleteFolderHistoryItem",
					"when": "viewItem =~ /^codebuddy.openremotessh.explorer.folder/",
					"group": "inline@2"
				}
			]
		}
	},
	"scripts": {
		"postinstall": "npm run update-dts",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"package": "npx vsce package --yarn",
		"update-dts": "npx vscode-dts dev && npx vscode-dts main"
	},
	"devDependencies": {
		"@types/node": "^16.11.0",
		"@types/ssh2": "^0.5.52",
		"@types/ssh2-streams": "0.1.12",
		"@types/webpack": "^5.28.0",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"eslint": "^8.13.0",
		"eslint-plugin-jsdoc": "^19.1.0",
		"ts-loader": "^9.2.7",
		"typescript": "^4.6.3",
		"webpack": "^5.42.0",
		"webpack-cli": "^4.7.2"
	},
	"dependencies": {
		"glob": "^9.3.1",
		"simple-socks": "git+https://github.com/jeanp413/simple-socks#main",
		"socks": "^2.5.0",
		"@jeanp413/ssh-config": "^4.3.1",
		"ssh2": "git+https://github.com/jeanp413/ssh2#master"
	}
}
